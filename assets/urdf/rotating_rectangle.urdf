<?xml version="1.0"?>

<robot name="rotating_box">

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <!-- Base link -->
  <link name="base_link">
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Intermediate link for X-axis rotation -->
  <link name="x_rotating_link">
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Intermediate link for Y-axis rotation -->
  <link name="y_rotating_link">
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- Link for rectangle -->
  <link name="rectangle_link">
    <visual>
      <geometry>
        <box size="1 0.5 0.2"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="1 0.5 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- X-axis rotation joint -->
  <joint name="x_rotation_joint" type="revolute">
    <parent link="base_link"/>
    <child link="x_rotating_link"/>
    <axis xyz="1 0 0"/>
    <limit effort="100" velocity="2"/>
  </joint>

  <!-- Y-axis rotation joint -->
  <joint name="y_rotation_joint" type="revolute">
    <parent link="x_rotating_link"/>
    <child link="y_rotating_link"/>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="2"/>
  </joint>

  <!-- Z-axis rotation joint -->
  <joint name="z_rotation_joint" type="revolute">
    <parent link="y_rotating_link"/>
    <child link="rectangle_link"/>
    <axis xyz="0 0 1"/>
    <limit effort="100" velocity="2"/>
  </joint>

</robot>

